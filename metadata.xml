<?xml version="1.0" encoding="UTF-8"?>
<!--
============================
  THEME FILE FOR ALEPHNOTE
============================
Theme:      Stachybotrys
Source:     https://github.com/Arty2/stachybotrys
Author:		Heracles Papatheodorou
-->
<theme>
	<meta>
		<name>Stachybotrys</name>
		<version>1.5</version>
		<compatibility>*</compatibility>
		<author>heracl.es</author>
		<type>theme</type>
		<description>A minimal dark theme and iconset</description>
	</meta>

	<ref>
		<valueref key="SB_VeryLightGray"  type="color">#C0C0C0</valueref>
		<valueref key="SB_LightGray"      type="color">#5C5C5F</valueref>
		<valueref key="SB_Gray"           type="color">#4C4C4F</valueref>
		<valueref key="SB_SlightDarkGray" type="color">#202022</valueref>
		<valueref key="SB_DarkGray"       type="color">#3C3C3F</valueref>
		<valueref key="SB_VeryDarkGray"   type="color">#2C2C2F</valueref>

		<valueref key="SB_Red"            type="color">#FF5794</valueref>
		<valueref key="SB_Orange"         type="color">#FAA23D</valueref>
		<valueref key="SB_Yellow"         type="color">#E6DB7A</valueref>
		<valueref key="SB_Green"          type="color">#B2E64C</valueref>
		<valueref key="SB_Cyan"           type="color">#66CCE1</valueref>
		<valueref key="SB_Blue"           type="color">#5596F1</valueref>
		<valueref key="SB_Purple"         type="color">#CD23B9</valueref>

		<valueref key="Transparent"       type="color">#00000000</valueref>
		<valueref key="Black"             type="color">#000000</valueref>
		<valueref key="White"             type="color">#FFFFFF</valueref>
	</ref>

	<data>
		<property name="scintilla.background"                              value="@SB_DarkGray" />
		<property name="scintilla.bordercolor"                             value="@SB_DarkGray" />
		<property name="scintilla.default:foreground"                      value="@SB_VeryLightGray" />
		<property name="scintilla.link:foreground"                         value="@SB_Purple" />
		<property name="scintilla.margin.numbers:background"               value="@SB_DarkGray" />
		<property name="scintilla.margin.numbers:foreground"               value="@SB_Gray" />
		<property name="scintilla.margin.symbols:background"               value="@SB_DarkGray" />
		<property name="scintilla.markdown.code:foreground"                value="@SB_VeryLightGray" />
		<property name="scintilla.markdown.code:background"                value="@SB_VeryDarkGray" />
		<property name="scintilla.markdown.header:bold"                    value="false" />
		<property name="scintilla.markdown.header:italic"                  value="true" />
		<property name="scintilla.markdown.header:background"              value="@SB_Gray" />
		<property name="scintilla.markdown.header:foreground"              value="@White" />
		<property name="scintilla.markdown.list:foreground"                value="@SB_LightGray" />
		<property name="scintilla.markdown.url:foreground"                 value="@White" />
<!-- 		<property name="scintilla.scrollbar_h:visible"                     value="true" />
		<property name="scintilla.scrollbar_v:visible"                     value="false" /> -->
		<property name="scintilla.search.global:alpha"                     value="100" />
		<property name="scintilla.search.global:color"                     value="@SB_Purple" />
		<property name="scintilla.search.global:outline_alpha"             value="230" />
		<property name="scintilla.search.local:alpha"                      value="100" />
		<property name="scintilla.search.local:color"                      value="@SB_Purple" />
		<property name="scintilla.search.local:outline_alpha"              value="230" />
		<property name="scintilla.selection:background"                    value="@SB_Purple"/>
		<property name="scintilla.selection:foreground"                    value="@White"/>
		<property name="scintilla.selection:override_foreground"           value="true"/>
		<property name="scintilla.whitespace:color"                        value="@SB_Gray" />

		<property name="window.background"                                 value="@SB_DarkGray" />
		<property name="window.changedate:foreground"                      value="@SB_LightGray" />
		<property name="window.foreground"                                 value="@SB_VeryLightGray" />
		<property name="window.globalsearch.button:background"             value="@SB_DarkGray" />
		<property name="window.globalsearch.button:foreground"             value="@Transparent" />
		<property name="window.globalsearch.input:background"              value="@SB_DarkGray" />
		<property name="window.globalsearch.input:border"                  value="@SB_LightGray" />
		<property name="window.globalsearch.input:foreground"              value="@SB_VeryLightGray" />
		<property name="window.globalsearch.placeholder:foreground"        value="@Transparent" />

		<property name="window.inlinesearch.btnCaseIns:foreground"         value="$window.inlinesearch:foreground" />
		<property name="window.inlinesearch.btnRegex:foreground"           value="$window.inlinesearch:foreground" />
		<property name="window.inlinesearch.btnSearch:foreground"          value="$window.inlinesearch:foreground" />
		<property name="window.inlinesearch.btnWholeWord:foreground"       value="$window.inlinesearch:foreground" />
		<property name="window.inlinesearch.textbox:background"            value="@SB_DarkGray" />
		<property name="window.inlinesearch.textbox:foreground"            value="@SB_VeryLightGray" />
		<property name="window.inlinesearch:background"                    value="@SB_VeryDarkGray" />
		<property name="window.inlinesearch:foreground"                    value="@SB_VeryLightGray" />

		<property name="window.menubar:background"                         value="@SB_DarkGray" />
		<property name="window.menubar:foreground"                         value="@SB_VeryLightGray" />

		<property name="window.notesview.flat.datetime1:foreground"        value="@SB_LightGray" />
		<property name="window.notesview.flat.datetime2:foreground"        value="@SB_LightGray" />
		<property name="window.notesview.flat.preview:foreground"          value="@SB_LightGray" />
<!-- 		<property name="window.notesview.flat.scrollbar_v:visible"         value="false" /> -->
		<property name="window.notesview.flat.selected:background"         value="@SB_Gray" />
		<property name="window.notesview.flat.selected:foreground"         value="@SB_LightGray" />
		<property name="window.notesview.flat.separator"                   value="@SB_LightGray" />
		<property name="window.notesview.flat.vborder:margin"              value="6,1,6,0" />
		<property name="window.notesview.flat:background"                  value="@SB_DarkGray" />
		<property name="window.notesview.flat:bordercolor"                 value="@SB_DarkGray" />
		<property name="window.notesview.flat:foreground"                  value="@SB_VeryLightGray" />
<!-- 		<property name="window.notesview.hierachical.list.scrollbar_v:visible" value="false" />
		<property name="window.notesview.hierachical.tree.scrollbar_v:visible" value="false" /> -->
		<property name="window.notesview.hierachical.list:bordercolor"     value="@SB_DarkGray" />
		<property name="window.notesview.hierachical.tree.selected:background" value="@SB_Gray" />
		<property name="window.notesview.hierachical.tree.selected:foreground" value="@SB_LightGray" />
		<property name="window.notesview.hierachical.tree:bordercolor"     value="@SB_DarkGray" />

		<property name="window.notetitle.placeholder"                      value="@SB_LightGray" />
		<property name="window.notetitle:caret"                            value="@White"/>
		<property name="window.notetitle:foreground"                       value="@White" />

		<property name="window.pathdisplay.button:background"              value="@SB_Gray" />
		<property name="window.pathdisplay.button:border"                  value="@SB_LightGray" />
		<property name="window.pathdisplay.button:foreground"              value="@SB_VeryLightGray" />
		<property name="window.pathdisplay.element:background"             value="$window.background" />
		<property name="window.pathdisplay.element:background_hover"       value="#FAF0E6" />
		<property name="window.pathdisplay.element:border"                 value="#D3D3D3" />
		<property name="window.pathdisplay.element:foregroud"              value="$window.foreground" />
		<property name="window.pathdisplay.popup.button:background"        value="@SB_Gray" />
		<property name="window.pathdisplay.popup.button:border"            value="@SB_LightGray" />
		<property name="window.pathdisplay.popup.button:foreground"        value="@SB_VeryLightGray" />
		<property name="window.pathdisplay.popup.list.selected:background" value="@SB_Gray" />
		<property name="window.pathdisplay.popup.list.selected:foreground" value="@SB_Green" />
		<property name="window.pathdisplay.popup.list:background"          value="$window.background" />
		<property name="window.pathdisplay.popup.list:foreground"          value="$window.foreground" />
		<property name="window.pathdisplay.popup.text:foreground"          value="$window.foreground" />
		<property name="window.pathdisplay.popup:background"               value="@Black" />
		<property name="window.pathdisplay.popup:border"                   value="@SB_LightGray" />
		<property name="window.pathdisplay.popup:border_thickness"         value="0" />

		<property name="window.splitter"                                   value="@SB_Gray" />

		<property name="window.statusbar:background"                       value="@SB_DarkGray" />
		<property name="window.statusbar:foreground"                       value="@SB_LightGray" />

		<property name="window.tageditor.placeholder"                      value="@Transparent" />
		<property name="window.tageditor.popup:background"                 value="@SB_DarkGray" />
		<property name="window.tageditor.popup:bordercolor"                value="#FF0000" />
		<property name="window.tageditor.popup:bordercolor"                value="@SB_LightGray" />
		<property name="window.tageditor.popup:foreground"                 value="@SB_VeryLightGray" />
		<property name="window.tageditor.tag:background"                   value="@SB_DarkGray" />
		<property name="window.tageditor.tag:bordercolor_default"          value="@SB_LightGray" />
		<property name="window.tageditor.tag:bordercolor_highlighted"      value="@SB_LightGray" />
		<property name="window.tageditor.tag:borderradius"                 value="1" />
		<property name="window.tageditor.tag:foreground"                   value="@SB_LightGray" />
		<property name="window.tageditor.tag:highlight"                    value="@SB_VeryLightGray"/>
	</data>
</theme>